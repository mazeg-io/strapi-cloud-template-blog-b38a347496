{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Support services displayed on the landing page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "iconColor": {
      "type": "enumeration",
      "enum": ["blue", "orange"],
      "default": "blue",
      "required": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
